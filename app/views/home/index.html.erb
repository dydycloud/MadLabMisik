<%= will_paginate @posts %>
<br>
<% @posts.each do |post| %>
	<div class="tile content <%= cycle("bg-color-orangeDark", "bg-color-red", "bg-color-orange", "bg-color-blueLight") -%>">
        <%= image_tag( post.image.url, :width => 200, :class => "place-right")%>
        <h4 style="margin-bottom: 5px;"><%= post.title %></h4>
        <p><%= truncate( post.description , :length => 100)%></p>
        <h5><%= post.name %> || <%= post.created_at %></h5>
        <p><%= link_to 'Read', home_path(post) %></p>
    </div>
<% end %>

