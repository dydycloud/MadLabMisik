<p id="notice"><%= notice %></p>
<div class="page snapped">
   <%= image_tag(@post.image.url, :width => 420) %>
   <p><strong>By : <%= @post.name %></strong></p>
   <p><strong><%= @post.created_at.to_formatted_s(:long) %></strong></p>
</div>
<div class="page fill">
    <h2><%= @post.title %></h2>
    <h2><small><%= @post.description %></small></h2>
    <p><%= raw @post.content %></p>
</div>
<p>
	<%= link_to 'Edit', edit_post_path(@post) %> | 
	<%= link_to 'back', root_path %>
</p>
